page {
  padding-top: 40rpx;
  background-color: #f6f6f6;
  padding-bottom: 60rpx;
}
.backgroud{
  width: 320px;
  height: 320px;
}
.title{
    margin-left:10px;
    padding-left: 10px;
    font-size:40rpx;
    font-weight: bold;
    line-height: 40px
  }
  
  .power {
    margin-top: 30rpx;
    border-radius: 5px;
    background-color: white;
    width: 93%;
    padding-bottom: 1rpx;
  }
  
  .power_info {
    display: flex;
    padding: 30rpx 25rpx;
    align-items: center;
    justify-content: space-between;
  }
  
  .power_info_text {
    display: flex;
    flex-direction: column;
  }
  
  .power_info_text_title {
    margin-bottom: 10rpx;
    font-weight: 400;
    font-size: 35rpx;
  }

  .power_item_icon {
    width: 30rpx;
    height: 30rpx;
  }
  
  .plus{
    width: 50px;
    height: 50px;
    position: fixed;
    bottom: 10%;
    right: 5%;
    display: flex;
    justify-content: right;
  
}